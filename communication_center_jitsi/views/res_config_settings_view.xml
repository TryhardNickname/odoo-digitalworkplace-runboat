<odoo>
    <data>
        <record id="jitsi_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="communication_center_calendar_online_meeting.calendar_res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('app_settings_block')]/div[@name='calendar_meeting_settings']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Jitsi URL</span>
                            <span class="fa fa-globe"/>
                            <div class="text-muted">
                                Enter your Jitsi URL
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="jitsi_url" string="Jitsi URL" class="col-lg-3 o_light_label"/>
                                    <field name="jitsi_url"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="calendar_event_calendar_view_chekbox" model="ir.ui.view">
            <field name="name">calendar.event.calendar</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <field name="location"  position="before">
                    <field name="video_meeting_chekbox" invisible="1"/>
                    <field name="online_meeting_link" attrs="{'invisible': [('video_meeting_chekbox', '!=', True)]}" widget="url">
                    </field>
                </field>
                <field name="location" position="attributes">
                    <attribute name="attrs">{'invisible':[('video_meeting_chekbox','=',True)]}</attribute>
                </field>
            </field>
        </record>

        <record id="calendar_event_calendar_view_video_padge" model="ir.ui.view">
            <field name="name">calendar.event.calendar</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='page_misc']" position="after">
                    <field name="video_meeting_chekbox" invisible="1"/>
                    <page name="video_meeting" string ="Video Meeting" attrs="{'invisible': [('video_meeting_chekbox', '!=', True)]}">
                        <group col="3">
                                <field name="room_name"/>
                                <field name="microphone_off"/>
                                <field name="webcam_off"/>
                                <field name="lobby_with_name"/>
                                <field name="link_for_participants"/>
                                <field name="link_for_moderator"/>
                                <field name="no_recording"/>
                                <field name="start_recording"/>
                                <field name="rooms_creation"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="calendar_event_calendar_view_remainder_button" model="ir.ui.view">
            <field name="name">calendar.event.calendar</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='alarm_ids']" position="after">
                    <button col="3" name="hi" t-on-click="_onTrackingStatusClick">Hi</button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
