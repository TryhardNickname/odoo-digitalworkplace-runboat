<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="calendar_voting_site" name="calendar_voting_site">
        <t t-call="website.layout">
            <div id="controller_content">
                <div class="meeting-info">
                    <span class="meeting-name">Hello!</span>
                    <div class="meeting-div-title">
                        <span class="meeting-span" >Date:</span>
                    </div>
                    <div class="meeting-div-info">
                        <span class="meeting-span">Today!</span>
                    </div>
                    <div class="meeting-div-title">
                        <span class="meeting-span">Place:</span>
                    </div>
                    <div class="meeting-div-info">
                        <span class="meeting-span">Everywhere</span>
                    </div>
                    <div class="meeting-div-title">
                        <span class="meeting-span">Participants:</span>
                    </div>
                    <div id="participants-div">
                        <span id="participants-span" >- Name 1 <br></br> - Name 2 <br></br> - Name 3 </span>
                    </div>
                </div>
                <div id="voting">
                    <div class="container-week">
                        <span class="cell-day"></span>
                        <span class="cell-day">Monday</span>
                        <div class="vl"></div>
                        <span class="cell-day">Tuesday</span>
                        <div class="vl"></div>
                        <span class="cell-day">Wednesday</span>
                        <div class="vl"></div>
                        <span class="cell-day">Thursday</span>
                        <div class="vl"></div>
                        <span class="cell-day">Friday</span>
                        <span class="cell-day"></span>
                    </div>
                    <div class="container-voting">
                        <span class="cell-name">Name 1</span>
                        <span class="cell-time">Time</span>
                        <div class="vl"></div>
                        <span class="cell-time">Time</span>
                        <div class="vl"></div>
                        <span class="cell-time">Time</span>
                        <div class="vl"></div>
                        <span class="cell-time">Time</span>
                        <div class="vl"></div>
                        <span class="cell-time">Time</span>
                        <span class="cell-not-voting"></span>
                    </div>
                    <div class="container-the-voting">
                        <span class="cell-voting-name">Name 2</span>
                        <span class="btn btn-block cell-voting-time">Time</span>
                        <div class="vl"></div>
                        <span class="btn cell-voted-time">Time</span>
                        <div class="vl"></div>
                        <span class="btn cell-voting-time">Time</span>
                        <div class="vl"></div>
                        <span class="btn cell-voting-time">Time</span>
                        <div class="vl"></div>
                        <span class="btn cell-voting-time">Time</span>
                        <span class="btn cell-voting">Vote</span>
                    </div>
                    <div class="container-voting">
                        <span class="cell-name">Name3</span>
                        <span class="cell-time">Time</span>
                        <div class="vl"></div>
                        <span class="cell-time">Time</span>
                        <div class="vl"></div>
                        <span class="cell-time">Time</span>
                        <div class="vl"></div>
                        <span class="voted-cell-time">Time</span>
                        <div class="vl"></div>
                        <span class="cell-time">Time</span>
                        <span class="cell-not-voting"></span>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
